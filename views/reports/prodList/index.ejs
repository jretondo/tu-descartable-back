<html>

<head>

    <meta charset="UTF-8">

    <link rel="stylesheet" href="./styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>

    <%- style %>

        <header class="header">
            <div class="logo">
                <img src="<%- logo %> " alt="logo">
            </div>
            <div class="summary">
                LISTADO DE PRODUCTOS
            </div>
        </header>

        <main class="main">
            <div class="tasks">
                <table class="tasks-table">
                    <thead>
                        <tr>
                            <th>Producto</th>
                            <th>Proveedor</th>
                            <th>Marca</th>
                            <th>Precio Venta</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% prodList.forEach(function(item){ %>
                            <tr>
                                <td style="text-align: left">
                                    <%- item.name %>
                                </td>
                                <td>
                                    <%- item.category %>
                                </td>
                                <td>
                                    <%- item.subcategory %>
                                </td>
                                <td style="text-align: right">
                                    <%- item.vta_price %>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
        </main>
</body>

</html>